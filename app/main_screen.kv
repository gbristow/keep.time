<MainScreen>:
    BoxLayout:
        orientation: 'vertical'

        TimerBar:
            id: timer_bar

        AnchorLayout:
            id: table_layout
            size_hint: 1, 10

        MDBottomNavigation:
            id: navigation

            MDBottomNavigationItem:
                name: 'time_events'
                text: 'Events'
                icon: 'calendar-clock'

            MDBottomNavigationItem:
                name: 'time_stats'
                text: 'Stats'
                icon: 'chart-line'

            MDBottomNavigationItem:
                name: 'timesheet'
                text: 'Timesheet'

                icon: 'file-table-box-outline'
