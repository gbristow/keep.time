<MainLayout>:
    orientation: 'vertical'

    ScreenManager:
        id: manager

        Screen:
            name: "main"

            BoxLayout:
                orientation: 'vertical'
                
                MDToolbar:
                    type_height: "small"
                    left_action_items: [["timer-sand", lambda x: app.open_timer()]]

                MDBottomNavigation:
                    id: navigation

                    MDBottomNavigationItem:
                        name: 'time_events'
                        text: 'Events'
                        icon: 'calendar-clock'

                        TimeEventsTable:

                    MDBottomNavigationItem:
                        name: 'time_stats'
                        text: 'Stats'
                        icon: 'chart-line'

                    MDBottomNavigationItem:
                        name: 'timesheet'
                        text: 'Timesheet'
                        icon: 'file-table-box-outline'

        EventTimer:
            name: "timer"
            id: timer
            